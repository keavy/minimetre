<% unless collection.blank? -%>
  <h2>Recommendations</h2>
    <table id="summary">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Message</th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |recommendation| -%>
          <tr>
            <td><%= link_to "Edit", edit_admin_recommendation_path(recommendation), :class => 'secondary' %></td>
            <td><%= recommendation.name %></td>
            <td><%= truncate(recommendation.message, :length => 50) %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
<% end -%>